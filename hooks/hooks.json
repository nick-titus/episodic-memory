{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/cli/ensure-dependencies"
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/cli/episodic-memory",
            "args": ["sync"]
          }
        ]
      }
    ]
  }
}
